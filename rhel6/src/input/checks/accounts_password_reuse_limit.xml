<def-group>
  <definition class="compliance" id="accounts_password_reuse_limit" version="1">
    <metadata>
      <title>Limit Password Reuse</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14939-3" source="CCE" />
      <description>The passwords to remember should be set correctly.</description>
    </metadata>
    <criteria>
      <criterion comment="remember parameter is set to 0" test_ref="test_etc_pamd_systemauth" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="check that remember is set appropriately in /etc/pam.d/system-auth" id="test_etc_pamd_systemauth" version="1">
    <ind:object object_ref="object_etc_pamd_systemauth" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_etc_pamd_systemauth" version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>system-auth</ind:filename>
    <ind:pattern operation="pattern match">^\s*password[\s]+(?:sufficient|required)[\s]+pam_unix\.so[\s]+.*remember=[0-9]+\s+.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
