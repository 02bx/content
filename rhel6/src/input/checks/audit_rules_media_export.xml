<def-group>
  <definition class="compliance"
  id="audit_rules_media_export" version="1">
    <metadata>
      <title>Ensure auditd Collects Information on Exporting to
      Media (successful)</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14569-8" source="CCE" />
      <description>Audit rules about the Information on Exporting
      to Media (successful) are enabled</description>
    </metadata>
    <criteria comment="Architecture is 32 bit or 64 bit"
    operator="OR">
      <criteria comment="32bit arch">
        <criterion comment="check that arch is i386 or i686"
        test_ref="test_201674" />
        <criterion comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S mount -F auid&gt;=500 -F auid!=4294967295 -k export"
        test_ref="test_201660" />
      </criteria>
      <criteria comment="62bit arch">
        <criterion comment="check that arch is x86_64 ia64 amd64 ppc64 s390x"
        test_ref="test_201681" />
        <criterion comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S mount -F auid&gt;=500 -F auid!=4294967295 -k export"
        test_ref="test_201661" />
      </criteria>
    </criteria>
  </definition>
  <unix:uname_test check="all"
  comment="check architecture is 32 bit"
  id="test_201674" version="1">
    <unix:object object_ref="obj_201674" />
    <unix:state state_ref="state_201673" />
  </unix:uname_test>
  <unix:uname_state id="state_201673"
  version="1">
    <unix:processor_type operation="pattern match">^i386$|^i686$</unix:processor_type>
  </unix:uname_state>
  <unix:uname_object id="obj_201674"
  version="1" />
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S mount -F auid&gt;=500 -F auid!=4294967295 -k export"
  id="test_201660" version="1">
    <ind:object object_ref="obj_201660" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201660"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-a\salways,exit\s\-F\sarch=b32\s\-S\smount\s\-F\sauid&gt;=500\s\-F\sauid!=4294967295\s\-k\sexport$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <unix:uname_test check="all"
  comment="check architecture is 64 bit"
  id="test_201681" version="1">
    <unix:object object_ref="obj_201674" />
    <unix:state state_ref="state_201678" />
  </unix:uname_test>
  <unix:uname_state id="state_201678"
  version="1">
    <unix:processor_type operation="pattern match">^x86_64$|^ia64$|</unix:processor_type>
  </unix:uname_state>
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S mount -F auid&gt;=500 -F auid!=4294967295 -k export"
  id="test_201661" version="1">
    <ind:object object_ref="obj_201661" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201661"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-a\salways,exit\s\-F\sarch=b64\s\-S\smount\s\-F\sauid&gt;=500\s\-F\sauid!=4294967295\s\-k\sexport$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
