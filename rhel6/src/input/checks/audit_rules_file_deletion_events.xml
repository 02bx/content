<def-group>
  <definition class="compliance"
  id="audit_rules_file_deletion_events" version="1">
    <metadata>
      <title>Ensure auditd Collects Files Deletion Events by User
      (successful and unsuccessful)</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14820-5" source="CCE" />
      <description>Audit rules about the Files Deletion Events by
      User (successful and unsuccessful) are enabled</description>
    </metadata>
    <criteria comment="Architecture is 32 bit or 64 bit"
    operator="OR">
      <criteria comment="32bit arch">
        <criterion comment="check that arch is i386 or i686"
        test_ref="test_201676" />
        <criterion comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S unlink -S unlinkat -S rename -S renameat -F auid&gt;=500 -F auid!=4294967295 -k delete"
        test_ref="test_201671" />
      </criteria>
      <criteria comment="62bit arch">
        <criterion comment="check that arch is x86_64 ia64 amd64 ppc64 s390x"
        test_ref="test_201683" />
        <criterion comment="/etc/audit/audit.rules contains -a always,exit -F arch=ARCH -S unlink -S unlinkat -S rename -S renameat -F auid&gt;=500 -F auid!=4294967295 -k delete"
        test_ref="test_201673" />
      </criteria>
    </criteria>
  </definition>
  <unix:uname_test check="all"
  comment="check architecture is 32 bit"
  id="test_201676" version="1">
    <unix:object object_ref="obj_201670" />
    <unix:state state_ref="state_201675" />
  </unix:uname_test>
  <unix:uname_state id="state_201675"
  version="1">
    <unix:processor_type operation="pattern match">
    ^i386$|^i686$</unix:processor_type>
  </unix:uname_state>
  <unix:uname_object id="obj_201670"
  version="1" />
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -a always,exit -F arch=b32 -S unlink -S unlinkat -S rename -S renameat -F auid&gt;=500 -F auid!=4294967295 -k delete"
  id="test_201671" version="1">
    <ind:object object_ref="obj_201671" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201671"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-a\salways,exit\s\-F\sarch=b32\s\-S\sunlink\s\-S\sunlinkat\s\-S\srename\s\-S\srenameat\s\-F\sauid&gt;=500\s\-F\sauid!=4294967295\s\-k\sdelete$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <unix:uname_test check="all"
  comment="check architecture is 64 bit"
  id="test_201683" version="1">
    <unix:object object_ref="obj_201670" />
    <unix:state state_ref="state_201680" />
  </unix:uname_test>
  <unix:uname_state id="state_201680"
  version="1">
    <unix:processor_type operation="pattern match">^x86_64$|^ia64$|</unix:processor_type>
  </unix:uname_state>
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -a always,exit -F arch=b64 -S unlink -S unlinkat -S rename -S renameat -F auid&gt;=500 -F auid!=4294967295 -k delete"
  id="test_201673" version="1">
    <ind:object object_ref="obj_201673" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201673"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-a\salways,exit\s\-F\sarch=b64\s\-S\sunlink\s\-S\sunlinkat\s\-S\srename\s\-S\srenameat\s\-F\sauid&gt;=500\s\-F\sauid!=4294967295\s\-k\sdelete$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
