<def-group>
  <definition class="compliance"
  id="accounts_password_reuse_limit" version="1">
    <metadata>
      <title>Limit password reuse</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14939-3" source="CCE" />
      <description>The passwords to remember should be set
      correctly.</description>
    </metadata>
    <criteria operator="ONE">
      <criteria>
        <criterion comment="remember parameter is set to 0"
        test_ref="test_200841" />
      </criteria>
      <criteria>
        <criterion comment="remember parameter is set to 0 (note this is negated)"
        negate="true"
        test_ref="test_200841" />
        <criterion comment="check the /etc/pam.d/system-auth password module has a remember option set appropriately"
        test_ref="test_200842" />
      </criteria>
    </criteria>
  </definition>
  <ind:variable_test check="all"
  comment="check remember parameter is set to 0"
  id="test_200841" version="1">
    <ind:object object_ref="obj_200841" />
    <ind:state state_ref="state_200841" />
  </ind:variable_test>
  <ind:variable_state comment="remember is set to 0"
  id="state_200841" version="1">
    <ind:value datatype="int">0</ind:value>
  </ind:variable_state>
  <ind:variable_object id="obj_200841"
  version="1">
    <ind:var_ref>var_20084</ind:var_ref>
  </ind:variable_object>
  <ind:textfilecontent54_test check="all"
  check_existence="all_exist"
  comment="check that remember is set appropriately in /etc/pam.d/system-auth"
  id="test_200842" version="1">
    <ind:object object_ref="obj_200842" />
    <ind:state state_ref="state_200842" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state id="state_200842"
  version="1">
    <ind:subexpression datatype="int" operation="equals"
    var_check="all" var_ref="var_20084" />
  </ind:textfilecontent54_state>
  <external_variable comment="External variable for definition 20084 number of passwords to remember"
  datatype="int" id="var_20084"
  version="1" />
  <ind:textfilecontent54_object id="obj_200842"
  version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>system-auth</ind:filename>
    <ind:pattern operation="pattern match">
    ^\s*password[\s]+(?:sufficient|required)[\s]+pam_unix\.so[\s]+.*remember=([\d]+)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
