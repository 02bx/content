<def-group>
  <definition class="compliance"
  id="kernel_module_sctp_disabled" version="2">
    <metadata>
      <title>Disable Support for SCTP</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14132-5" source="CCE" />
      <description>Support for SCTP should be
      disabled.</description>
    </metadata>
    <criteria>
      <criterion comment="check for SCTP in /etc/modprobe.conf"
      test_ref="test_201477" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="Check /etc/modprobe.conf for line install SCTP /bin/true"
  id="test_201477" version="1">
    <ind:object object_ref="obj_201477" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201477"
  version="2">
    <ind:path>/etc/modprobe.d</ind:path>
    <ind:filename>local.conf</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*install[\s]+sctp[\s]+/bin/true$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
