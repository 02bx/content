<def-group>
  <definition class="compliance"
  id="sshd_idle_timeout" version="1">
    <metadata>
      <title>Set Idle Timeout Interval for User Logins</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-3845-5" source="CCE" />
      <description>The SSH idle timout interval should be set to an
      appropriate value (and dependencies are met)</description>
    </metadata>
    <criteria comment="SSH is not being used or conditions are met"
    operator="OR">
      <extend_definition comment="sshd service is disabled"
      definition_ref="NEEDSFIXUP_20234" />
      <criterion comment="check ClientAliveInterval in /etc/ssh/sshd_config"
      test_ref="test_20239" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="all_exist"
  comment="Tests the value of the ClientAliveInterval setting in the /etc/ssh/sshd_config file"
  id="test_20239" version="1">
    <ind:object object_ref="obj_20239" />
    <ind:state state_ref="state_20239" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state comment="ClientAliveInterval in seconds"
  id="state_20239" version="1">
    <ind:subexpression datatype="int" operation="equals"
    var_check="all" var_ref="var_20239" />
  </ind:textfilecontent54_state>
  <external_variable comment="External variable for ClientActiveinterval in definition 20239"
  datatype="int" id="var_20239"
  version="1" />
  <ind:textfilecontent54_object id="obj_20239"
  version="1">
    <ind:path>/etc/ssh</ind:path>
    <ind:filename>sshd_config</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*ClientAliveInterval[\s]*([\d]+)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
