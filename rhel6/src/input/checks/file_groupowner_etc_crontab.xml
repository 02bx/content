<def-group>
  <definition class="compliance"
  id="file_groupowner_etc_crontab" version="1">
    <metadata>
      <title>Restrict Permissions on Files Used by cron</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-3626-9" source="CCE" />
      <description>The /etc/crontab file should be owned by the
      appropriate group.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_20208" />
    </criteria>
  </definition>
  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing group ownership"
  id="test_20208" version="1">
    <unix:object object_ref="obj_20208" />
    <unix:state state_ref="state_20208" />
  </unix:file_test>
  <unix:file_state id="state_20208"
  version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/crontab"
  id="obj_20208" version="1">
    <unix:path>/etc</unix:path>
    <unix:filename>crontab</unix:filename>
  </unix:file_object>
</def-group>
