<def-group>
  <definition class="compliance" id="mount_tmp_own_partition" version="1">
    <metadata>
      <title>Ensure /tmp Located On Separate Partition</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14161-4" source="CCE" />
      <description>The /tmp directory is a world-writable directory
      used for temporary file storage. Verify that it has its own
      partition or logical volume.</description>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_tmp_partition" comment="check for /tmp partition" />
      <criterion test_ref="test_etc_fstab_tmp" comment="find /tmp in /etc/fstab" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist" id="test_tmp_partition" version="1" comment="check for /tmp partition">
      <linux:object object_ref="object_own_tmp_partition" />
  </linux:partition_test>
  <linux:partition_object id="object_own_tmp_partition" version="1">
      <linux:mount_point>/tmp</linux:mount_point>
  </linux:partition_object>
  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="find /tmp in /etc/fstab" id="test_etc_fstab_tmp" version="1">
    <ind:object object_ref="object_etc_fstab_tmp" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_etc_fstab_tmp" version="1" comment="find /tmp in /etc/fstab">
    <ind:path>/etc</ind:path>
    <ind:filename>fstab</ind:filename>
    <ind:pattern operation="pattern match">^.*\s/tmp\s.*$</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
