<def-group>
  <definition class="compliance"
  id="sshd_protocol_2" version="1">
    <metadata>
      <title>Ensure Only Protocol 2 Connections Allowed</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-4325-7" source="CCE" />
      <description>SSH version 1 protocol support should be
      disabled. (and dependencies are met)</description>
    </metadata>
    <criteria comment="SSH is not being used or conditions are met"
    operator="OR">
      <extend_definition comment="sshd service is disabled"
      definition_ref="NEEDSFIXUP_20234" />
      <criterion comment="Conditions are satisfied"
      test_ref="test_20238" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="all_exist"
  comment="Tests the value of the Protocol[\s]&lt;:nocomment:&gt;1 setting in the /etc/ssh/sshd_config file"
  id="test_20238" version="1">
    <ind:object object_ref="obj_20238" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_20238"
  version="2">
    <ind:path>/etc/ssh</ind:path>
    <ind:filename>sshd_config</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*[Pp][Rr][Oo][Tt][Oo][Cc][Oo][lL][\s]+2(?:(?:[\s]+)|(?:$)|(?:#[\w\d\s]*))</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
