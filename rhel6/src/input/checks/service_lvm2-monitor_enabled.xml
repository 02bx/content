<def-group>
  <definition class="compliance" id="service_lvm2-monitor_enabled"
  version="1">
    <metadata>
      <title>Service lvm2-monitor Enabled</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="TODO" source="CCE" />
      <description>The lvm2-monitor service should be enabled if
      possible. This check was generated by the
      'create_services_enabled.py' script in the templates
      directory.</description>
    </metadata>
    <criteria comment="package lvm2 is installed and service lvm2-monitor is configured to start"
    operator="AND">
      <extend_definition comment="package lvm2 is installed"
      definition_ref="package_lvm2_installed" />
      <criteria operator="OR"
      comment="service lvm2-monitor is configured to start">
        <criterion comment="lvm2-monitor runlevel 0"
        test_ref="test_runlevel0_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 1"
        test_ref="test_runlevel1_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 2"
        test_ref="test_runlevel2_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 3"
        test_ref="test_runlevel3_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 4"
        test_ref="test_runlevel4_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 5"
        test_ref="test_runlevel5_lvm2-monitor" />
        <criterion comment="lvm2-monitor runlevel 6"
        test_ref="test_runlevel6_lvm2-monitor" />
      </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_lvm2-monitor"
  version="2">
    <unix:object object_ref="obj_runlevel0_lvm2-monitor" />
    <unix:state state_ref="state_service_on" />
