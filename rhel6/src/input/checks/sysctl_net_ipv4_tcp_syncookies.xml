<def-group>
  <definition class="compliance"
  id="sysctl_net_ipv4_tcp_syncookies" version="1">
    <metadata>
      <title>Network Parameters for Hosts and Routers</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-4265-5" source="CCE" />
      <description>Sending TCP syncookies should be enabled or
      disabled as appropriate.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_20124" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="all_exist"
  comment="Tests the value of the ^[\s]*net\.ipv4\.tcp_syncookies[\s]*=([\s]*) expression in the /etc/sysctl.conf file"
  id="test_20124" version="1">
    <ind:object object_ref="obj_20124" />
    <ind:state state_ref="state_20124" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state id="state_20124"
  version="1">
    <ind:subexpression operation="equals" var_check="all"
    var_ref="var_20124" />
  </ind:textfilecontent54_state>
  <external_variable comment="External variable for definition 20124"
  datatype="string" id="var_20124"
  version="1" />
  <ind:textfilecontent54_object id="obj_20124"
  version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>sysctl.conf</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*net\.ipv4\.tcp_syncookies[\s]*=[\s]*([^\s]*)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
