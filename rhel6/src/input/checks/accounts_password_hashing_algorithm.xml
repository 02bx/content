<def-group>
  <definition class="compliance" id="accounts_password_hashing_algorithm" version="1">
    <metadata>
      <title>Set SHA512 Password Hashing Algorithm</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14063-2" source="CCE" />
      <description>The password hashing algorithm should be set correctly.</description>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_accounts_password_hashing_algorithm_pam" />
      <criterion test_ref="test_accounts_password_hashing_algorithm_md5" />
      <criterion test_ref="test_accounts_password_hashing_algorithm_sha512" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="check /etc/pam.d/system-auth for correct settings" id="test_accounts_password_hashing_algorithm_pam" version="1">
    <ind:object object_ref="object_accounts_password_hashing_algorithm_pam" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="check /etc/login.defs for correct settings" id="test_accounts_password_hashing_algorithm_md5" version="1">
    <ind:object object_ref="object_accounts_password_hashing_algorithm_md5" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="check /etc/login.defs for correct settings" id="test_accounts_password_hashing_algorithm_sha512" version="1">
    <ind:object object_ref="object_accounts_password_hashing_algorithm_sha512" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object comment="check /etc/pam.d/system-auth for correct settings" id="object_accounts_password_hashing_algorithm_pam" version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>system-auth</ind:filename>
    <ind:pattern operation="pattern match">^password\s+sufficient\s+pam_unix.so\s+sha512($|(\s.*$))</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_object comment="check /etc/login.defs for correct settings" id="object_accounts_password_hashing_algorithm_md5" version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>login.defs</ind:filename>
    <ind:pattern operation="pattern match">^MD5_CRYPT_ENAB no$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_object comment="check /etc/login.defs for correct settings" id="object_accounts_password_hashing_algorithm_sha512" version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>login.defs</ind:filename>
    <ind:pattern operation="pattern match">^ENCRYPT_METHOD SHA512$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
