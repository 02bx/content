<def-group>
  <definition class="compliance"
  id="mount_option_dev_shm_nosuid" version="1">
    <metadata>
      <title>Add nosuid Option to /dev/shm Partition</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14306-5" source="CCE" />
      <description>Add nosuid Option to /dev/shm
      Partition</description>
    </metadata>
    <criteria>
      <criterion comment="checks for string 'nosuid' on /dev/shm line within /etc/fstab" test_ref="test_20138" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="checks for string 'nosuid' on /dev/shm line within /etc/fstab" id="test_20138" version="1">
    <ind:object object_ref="obj_20138" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_20138" version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>fstab</ind:filename>
    <ind:pattern operation="pattern match">^\s*tmpfs\s*/dev/shm\s*tmpfs.*nosuid.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
