<def-group>
  <definition class="compliance"
  id="audit_rules_login_events" version="1">
    <metadata>
      <title>Ensure auditd Collects Logon and Logout Events</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14904-7" source="CCE" />
      <description>Audit rules about the Logon and Logout Events
      are enabled</description>
    </metadata>
    <criteria>
      <criterion comment="/etc/audit/audit.rules contains -w /var/log/faillog -p wa -k logins"
      test_ref="test_201610" />
      <criterion comment="/etc/audit/audit.rules contains -w /var/log/lastlog -p wa -k logins"
      test_ref="test_201611" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -w /var/log/faillog -p wa -k logins"
  id="test_201610" version="1">
    <ind:object object_ref="obj_201610" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201610"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-w\s/var/log/faillog\s\-p\swa\s\-k\slogins$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_test check="all"
  check_existence="at_least_one_exists"
  comment="/etc/audit/audit.rules contains -w /var/log/lastlog -p wa -k logins"
  id="test_201611" version="1">
    <ind:object object_ref="obj_201611" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_201611"
  version="1">
    <ind:path>/etc/audit</ind:path>
    <ind:filename>audit.rules</ind:filename>
    <ind:pattern operation="pattern match">^\-w\s/var/log/lastlog\s\-p\swa\s\-k\slogins$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
