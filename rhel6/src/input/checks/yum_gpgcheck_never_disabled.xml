<def-group>
  <definition class="compliance"
  id="yum_gpgcheck_never_disabled" version="1">
    <metadata>
      <title>Ensure Package Signature Checking is Not Disabled For
      Any Repos</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14813-0" source="CCE" />
      <description>To ensure that signature checking is not
      disabled for any repos, ensure that the following line DOES
      NOT appear in any repo configuration files in
      /etc/yum.repos.d or elsewhere</description>
    </metadata>
    <criteria>
      <criterion comment="check value of gpgcheck=0 in /etc/yum.repos.d/*"
      negate="true"
      test_ref="test_20011" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  comment="check value of gpgcheck=0 in /etc/yum.repos.d/"
  id="test_20011" version="1">
    <ind:object object_ref="obj_20011" />
    <ind:state state_ref="state_20011" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state comment="Expected value of gpgcheck should be disabled because test is none exist"
  id="state_20011" version="1">
    <ind:subexpression datatype="int" entity_check="at least one"
    operation="equals">0</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_object comment="look for the value of gpgcheck= in /etc/yum.repos.d"
  id="obj_20011" version="1">
    <ind:path>/etc/yum.repos.d</ind:path>
    <ind:filename operation="pattern match">.*</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*gpgcheck[\s]*=[\s]*([0-1])</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
