<def-group>
  <definition class="compliance"
  id="kernel_module_hfsplus_disabled" version="2">
    <metadata>
      <title>Disable Mounting of hfsplus</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14093-9" source="CCE" />
      <description>prevents usage of this uncommon
      filesystems.</description>
    </metadata>
    <criteria>
      <criterion comment="check for hfsplus"
      test_ref="test_20031" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="at least one"
  comment="Check /etc/modprobe.conf for line install hfsplus /bin/true"
  id="test_20031" version="2">
    <ind:object object_ref="obj_20027" />
    <ind:state state_ref="state_20031" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state comment="Check for the hfsplus file system"
  id="state_20031" version="1">
    <ind:subexpression datatype="string" entity_check="all">
    hfsplus</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_object comment="Check in /etc/modprobe.d/local.conf for modules being loaded"
  id="obj_20027" version="2">
    <ind:path>/etc/modprobe.d</ind:path>
    <ind:filename>local.conf</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*install[\s]+([\S]+)[\s]+/bin/true</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">
    1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
