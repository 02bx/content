<def-group>
  <definition class="compliance" id="file_permissions_samba_password" version="1">
    <metadata>
      <title>Verify Samba Password File Permissions</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="TODO" source="CCE" />
      <description>Checks for correct permissions for all files in /var/lib/samba/private.</description>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_samba_password_files_uid" />
      <criterion test_ref="test_samba_password_files_gid" />
      <criterion test_ref="test_samba_password_files_mode" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="samba password files uid" id="test_samba_password_files_uid" version="1">
    <unix:object object_ref="object_samba_password_files" />
    <unix:state state_ref="state_uid_root" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="samba password files gid" id="test_samba_password_files_gid" version="1">
    <unix:object object_ref="object_samba_password_files" />
    <unix:state state_ref="state_gid_root" />
  </unix:file_test>

  <unix:file_test check="all" check_existence="all_exist" comment="samba password files mode" id="test_samba_password_files_mode" version="1">
    <unix:object object_ref="object_samba_password_files" />
    <unix:state state_ref="state_mode_0600" />
  </unix:file_test>

  <unix:file_object comment="/etc/group" id="object_samba_password_files" version="1">
    <unix:path>/var/lib/samba/private</unix:path>
    <unix:filename operation="pattern match">.*</unix:filename>
  </unix:file_object>

  <unix:file_state id="state_uid_root" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>

  <unix:file_state id="state_gid_root" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>

  <unix:file_state id="state_mode_0600" version="1">
    <unix:suid datatype="boolean">false</unix:suid>
    <unix:sgid datatype="boolean">false</unix:sgid>
    <unix:sticky datatype="boolean">false</unix:sticky>
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gread datatype="boolean">false</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">false</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
</def-group>
