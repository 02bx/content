<def-group>
  <definition class="compliance" id="mount_option_dev_shm_nodev" version="1">
    <metadata>
      <title>Add nodev Option to /dev/shm Partition</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-15007-8" source="CCE" />
      <description>Add nodev Option to /dev/shm
      Partition</description>
    </metadata>
    <criteria>
      <criterion comment="checks for string 'nodev' on /dev/shm line within /etc/fstab" test_ref="test_20136" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="checks for string 'nodev' on /dev/shm line within /etc/fstab" id="test_20136" version="1">
    <ind:object object_ref="obj_20136" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_20136" version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>fstab</ind:filename>
    <ind:pattern operation="pattern match">^\s*tmpfs\s*/dev/shm\s*tmpfs.*nodev.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
