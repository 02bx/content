<def-group>
  <definition class="compliance" id="audit_rules_record_timechange" version="1">
    <metadata>
      <title>Records Events that Modify Date and Time Information</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-14051-7" source="CCE" />
      <description>Audit rules about time are enabled</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="audit adjtimex settimeofday stime" test_ref="test_audit_rules_record_timechange_adjtimex_settimeofday_stime" />
      <criterion comment="audit clock_settime" test_ref="test_audit_rules_record_timechange_clock_settime" />
      <criterion comment="audit /etc/localtime" test_ref="test_audit_rules_record_timechange_etc_localtime" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" comment="audit adjtimex settimeofday stime" id="test_audit_rules_record_timechange_adjtimex_settimeofday_stime" version="1">
    <ind:object object_ref="object_audit_rules_record_timechange_adjtimex_settimeofday_stime" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_record_timechange_adjtimex_settimeofday_stime" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\-a\s+always,exit\s+(\-F\s+arch=(b64|b32)\s+)?\-S\s+adjtimex\s+\-S\s+settimeofday\s+\-S\s+stime\s+\-k\s+[-\w]+\s*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_test check="all" comment="audit clock_settime" id="test_audit_rules_record_timechange_clock_settime" version="1">
    <ind:object object_ref="object_audit_rules_record_timechange_clock_settime" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_record_timechange_clock_settime" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\-a\s+always,exit\s+(\-F\s+arch=(b64|b32)\s+)?\-S\s+clock_settime\s+\-k\s+[-\w]+\s*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_test check="all" comment="audit /etc/localtime" id="test_audit_rules_record_timechange_etc_localtime" version="1">
    <ind:object object_ref="object_audit_rules_record_timechange_etc_localtime" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_record_timechange_etc_localtime" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\-w\s+/etc/localtime\s+\-p\s+wa\s+\-k\s+[-\w]+\s*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
