    <ind:pattern operation="pattern match">
    ^\-a\salways,exit\s\-F\sarch=b32\s\-S\screat\s\-S\sopen\s\-S\sopenat\s\-S\struncate\s\-S\sftruncate\s\-F\sexit=\-EACCES\s\-F\sauid&gt;=500\s\-F\sauid!=4294967295\s\-k\saccess$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
