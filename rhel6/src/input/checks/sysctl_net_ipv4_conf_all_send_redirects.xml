<def-group>
  <definition class="compliance"
  id="sysctl_net_ipv4_conf_all_send_redirects" version="1">
    <metadata>
      <title>Network Parameters for Hosts Only</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-4155-8" source="CCE" />
      <description>Sending ICMP redirects should be disabled for
      all interfaces.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_20113" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="all_exist"
  comment="Tests the value of the ^[\s]*net\.ipv4\.conf\.all\.send_redirects[\s]*=([\s]*) expression in the /etc/sysctl.conf file"
  id="test_20113" version="1">
    <ind:object object_ref="obj_20113" />
    <ind:state state_ref="state_20113" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state id="state_20113"
  version="1">
    <ind:subexpression datatype="int" operation="equals">
    0</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_object id="obj_20113"
  version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>sysctl.conf</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*net\.ipv4\.conf\.all\.send_redirects[\s]*=([\s]*)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
