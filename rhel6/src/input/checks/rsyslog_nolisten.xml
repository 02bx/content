<def-group>
  <definition class="compliance"
  id="rsyslog_nolisten" version="1">
    <metadata>
      <title>Disable Rsyslogd from Accepting Remote Messages on
      Loghosts Only</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-17639-6" source="CCE" />
      <description>RSyslogd should reject remote
      messages</description>
    </metadata>
    <criteria>
      <criterion comment="Conditions are satisfied"
      test_ref="test_20153" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  check_existence="none_exist"
  comment="Ensure that the /etc/rsyslog.conf does not contain $InputTCPServerRun | $InputUDPServerRun | $InputRELPServerRun"
  id="test_20153" version="1">
    <ind:object object_ref="obj_20153" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_20153"
  version="1">
    <ind:path>/etc</ind:path>
    <ind:filename>rsyslog.conf</ind:filename>
    <ind:pattern operation="pattern match">
    ^\$Input(?:(TCP)|(UDP)|(RELP))ServerRun\s*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
