<def-group>
  <definition class="compliance"
  id="kernel_module_cramfs_disable" version="2">
    <metadata>
      <title>Disable Mounting of cramfs</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-14089-7" source="CCE" />
      <description>prevents usage of this uncommon
      filesystems.</description>
    </metadata>
    <criteria>
      <criterion comment="check for cramfs"
      test_ref="test_20027" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="at least one"
  comment="Check /etc/modprobe.conf for line install cramfs /bin/true"
  id="test_20027" version="2">
    <ind:object object_ref="obj_20027" />
    <ind:state state_ref="state_20027" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_state comment="Check for the cramfs file system"
  id="state_20027" version="1">
    <ind:subexpression datatype="string" entity_check="all">
    cramfs</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_object comment="Check in /etc/modprobe.d/usgcb-blacklist for modules being loaded"
  id="obj_20027" version="2">
    <ind:path>/etc/modprobe.d</ind:path>
    <ind:filename>usgcb-blacklist</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*install[\s]+([\S]+)[\s]+/bin/true</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">
    1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
