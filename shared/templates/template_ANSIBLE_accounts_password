# platform = Red Hat Enterprise Linux 7
- name: "Ensure PAM variable VARIABLE is set to (ansible-populate var_password_pam_VARIABLE)"
  lineinfile:
    create=yes
    dest="/etc/security/pwquality.conf"
    regexp="^VARIABLE"
    line="VARIABLE = (ansible-populate var_password_pam_VARIABLE)"
  tags:
    @ANSIBLE_TAGS@

