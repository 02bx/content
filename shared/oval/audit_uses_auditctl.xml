<def-group>
  <definition class="compliance" id="audit_uses_auditctl" version="1">
    <metadata>
      <title>Audit configured to use auditctl rulesets</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 7</platform>
        <platform>multi_platform_fedora</platform>
      </affected>
      <description>Evaluate if the audit system is configured to use auditctl rulesets.</description> 
    </metadata>
    <criteria operator="AND">
      <criterion comment="Evauate if audit configured to use auditctl" test_ref="test_audit_uses_auditctl" />
    </criteria>
  </definition>

  <!-- Test the auditctl case -->
  <ind:textfilecontent54_test check="all" comment="audit auditctl" id="test_audit_uses_auditctl" version="1">
    <ind:object object_ref="object_audit_uses_auditctl" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_uses_auditctl" version="1">
    <ind:filepath>/usr/lib/systemd/system/auditd.service</ind:filepath>
    <ind:pattern operation="pattern match">^ExecStartPost=\-\/sbin\/auditctl.*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
